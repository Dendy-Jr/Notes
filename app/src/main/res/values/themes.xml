<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorEerieBlack</item>

        <!-- Color -->
        <item name="colorWhite">#FFFFFFFF</item>
        <item name="colorBlack">#FF000000</item>
        <item name="colorGray">#63666A</item>
        <item name="colorDarkGray">#FF202020</item>
        <item name="colorEerieBlack">#252525</item>
        <item name="colorRed">#FF0000</item>
        <item name="colorGreen">#008000</item>
        <item name="colorYellow">#FFFF00</item>
        <item name="colorBlue">#0000FF</item>
        <item name="colorPink">#FFC0CB</item>
        <item name="colorOrange">#FFA500</item>

        <!-- Font -->
        <item name="fontRobotoRegular">@font/roboto_reqular</item>
        <item name="fontRobotoMedium">@font/roboto_medium</item>
        <item name="fontRobotoBold">@font/roboto_bold</item>

    </style>
</resources>